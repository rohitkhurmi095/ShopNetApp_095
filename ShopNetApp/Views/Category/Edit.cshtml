@model ShopNetApp.Models.Category

@{
    ViewData["Title"] = "Edit";
}

<style>
    .validation-summary-errors {
        color: navy !important;
    }
</style>

<h2>Edit Category</h2>
<br />

<!-- FORM -->
<!--=======-->
<!-- ACTION: Category/Update/Id | Method:Post-->
@using (Html.BeginForm("Edit", "Category", new { Id = @Model.Id }, FormMethod.Post))
{
    <!--** PASS CategoryId as Hidden Field**-->
    <input type="hidden" value="@Model.Id" name="CategoryId" />

    <div class="form-row">
        <!-- CATEGORY NAME-->
        <div class="form-group col-md-4">
            @Html.LabelFor(Model => Model.Name)
            @Html.TextBoxFor(Model => Model.Name, Model.Name, new { @class = "form-control", placeholder = "Enter Category Name" })
            <!-- Error Message -->
            <span class="field-validation-valid text-danger">@Html.ValidationMessageFor(Model => Model.Name)</span>
        </div>
    </div>

    <div class="form-row">
        <!-- ORDER Details-->
        <div class="form-group col-md-4">
            @Html.LabelFor(Model => Model.DisplayOrder)
            @Html.TextBoxFor(Model => Model.DisplayOrder, Model.DisplayOrder.ToString(), new { @type = "number", @class = "form-control", placeholder = "Enter Order Id" })
            <!-- Error Message -->
            <span class="field-validation-valid text-danger">@Html.ValidationMessageFor(Model => Model.DisplayOrder)</span>
        </div>
    </div>


    <!-- VALIDATION SUMMARY(DISPLAY ALL ERRORS as List) -->
    @Html.ValidationSummary()



    <!-- UPDATE -->
    <button type="submit" class="btn btn-success mx-2">Update</button>

    <!-- CANCEL-->
    <a class="btn btn-danger" href="@Url.Action("Index","Category")">Cancel</a>
}





